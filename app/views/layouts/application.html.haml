!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : 'Ekonsil Experts'
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js"
    = javascript_include_tag 'https://maps.googleapis.com/maps/api/js?key=AIzaSyCmgeVHosSLqzZA2a86MjH9GDrcgr_ynuQ&sensor=true'
    = stylesheet_link_tag "application", :media => "all"
    = favicon_link_tag 'favicon.ico', :rel => 'shortcut icon'
    = javascript_include_tag "application"

  %body
    .navbar.navbar-inverse.navbar-static-top
      .container
        %button.navbar-toggle(type="button" data-toggle="collapse" data-target=".navbar-responsive-collapse")
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        %a.navbar-brand(href="#")
          %i.fa.fa-user-md
          Ekonsil Experts
        .navbar-collapse.collapse.navbar-responsive-collapse
          %ul.nav.navbar-nav
            %li= link_to 'Home', home_url
            %li= link_to 'About', about_url
          %ul.nav.navbar-nav.navbar-right
            %li
              %button#location-btn.btn.btn-primary.navbar-btn.has-popover{"data-target" => ".bs-example-modal-lg", "data-toggle" => "modal",
               :type => 'button', :title => 'Change Location', 'data-content' => 'Change Your location here'}
                %i.fa.fa-location-arrow
                = current_address
            %li= link_to 'Help', help_url
            %li.dropdown
              %a.dropdown-toggle{"aria-expanded" => "false", "data-toggle" => "dropdown", :href => "#", :role => "button"}
                = current_language
                %span.caret
              %ul.dropdown-menu{:role => "menu"}
                %li= link_to 'Deutsch', params.merge({ locale: :de })
                %li= link_to 'Francais', params.merge({ locale: :fr })
                %li= link_to 'Italiano', params.merge({ locale: :it })
                %li= link_to 'English', params.merge({ locale: :en })

    .container
      .row
        .col-lg-4
          #search.well.well-md
            #search-bar
              = form_tag({}, method: 'get', turboboost: true) do
                .input-group
                  %input.form-control{type: 'text', name: 'q', value: "#{params[:q]}"}
                  %span.input-group-btn
                    %button.btn.btn-primary{type: 'submit'}
                      %span.fa.fa-search
                      Search
            #search-results
              -if content_for?(:search)
                = yield(:search)
              -else
                %ul.list-group
                  %li.list-group-item.list-group-item-info
                    Enter your full text search term here.
                    %br
                    %br
                    %b Examples
                    "aölskdjfaskdj"
        .col-lg-8
          = bootstrap_flash
          = yield

    .modal.fade.bs-example-modal-lg{"aria-hidden" => "true", "aria-labelledby" => "myLargeModalLabel", :role => "dialog", :tabindex => "-1"}
      .modal-dialog.modal-lg
        .modal-content
          .modal-header.text-center
            %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
              %span{"aria-hidden" => "true"} ×
            %h4#myLargeModalLabel.modal-title.text-info Location Selection
          .modal-body
            .map-holder
              #map
          .modal-footer
            %a.btn{"data-dismiss" => "modal"} Close
            %a.btn.btn-primary.save Save changes