!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : t('app-title') + ' - Administration'
    = favicon_link_tag
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js"
    = javascript_include_tag 'https://maps.googleapis.com/maps/api/js?key=AIzaSyCmgeVHosSLqzZA2a86MjH9GDrcgr_ynuQ&sensor=true'
    = stylesheet_link_tag "application", :media => "all"
    = favicon_link_tag 'favicon.ico', :rel => 'shortcut icon'
    = javascript_include_tag "application"
    :javascript
      I18n.defaultLocale = '#{I18n.default_locale}';
      I18n.locale = '#{I18n.locale}';
    :javascript
      function ga () {
        var params = Array.prototype.slice.call(arguments, ga.length);
        console.log("GoogleAnalytics (disabled in Admin view): " + params);
      };

  %body
    .navbar#admin-navbar.navbar-inverse.navbar-static-top
      .container
        .navbar-header
          %button.navbar-toggle(type="button" data-toggle="collapse" data-target=".navbar-responsive-collapse")
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand(href="#{home_path}")
            %i.fa.fa-user-md
            = 'qm1 Admin'
        .navbar-collapse.collapse.navbar-responsive-collapse
          %ul.nav.navbar-nav
            %li= link_to fa_icon('wrench', t('hospitals')), admin_hospitals_url
            %li= link_to fa_icon('wrench', t('locations')), admin_hospital_locations_url
            %li= link_to fa_icon('wrench', t('doctors')), admin_doctors_url
            %li= link_to fa_icon('wrench', t('numbers')), admin_variables_url
            %li= link_to fa_icon('wrench', t('comp')), admin_comparisons_url
          %ul.nav.navbar-nav.navbar-right
            - if user_signed_in?
              %li= link_to fa_icon('sign-out', t('logout')), destroy_user_session_path, :method => :delete
            %li.dropdown
              %a.dropdown-toggle{"aria-expanded" => "false", "data-toggle" => "dropdown", :href => "#", :role => "button"}
                = fa_icon('flag', current_language)
                %span.caret
              %ul.dropdown-menu{:role => "menu"}
                %li= link_to 'Deutsch', params.merge({ locale: :de })
                %li= link_to 'Français', params.merge({ locale: :fr })
                %li= link_to 'English', params.merge({ locale: :en })


    .container
      .row
        .col-lg-12
          = bootstrap_flash
          = yield
          %div.text-center.top-buffer
            = render 'shared/footer'
    .modal.fade.bs-example-modal-lg{"aria-hidden" => "true", "aria-labelledby" => "myLargeModalLabel", :role => "dialog", :tabindex => "-1"}
      .modal-dialog.modal-lg
        .modal-content
          .modal-header.text-center
            %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
              %span{"aria-hidden" => "true"} ×
            %h4#myLargeModalLabel.modal-title =t('loc-select')
          .modal-body
            .map-holder
              #map
          .modal-footer
            %a.btn{"data-dismiss" => "modal"}= t('close')
            %a.btn.btn-primary.save= t('save-changes')