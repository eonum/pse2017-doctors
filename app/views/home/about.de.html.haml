- content_for :title, 'About'
- content_for :title, 'Help'
%body
  .navbar.navbar-inverse.navbar-static-top
    .container
      .navbar-header
        %button.navbar-toggle(type="button" data-toggle="collapse" data-target=".navbar-responsive-collapse")
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        %a.navbar-brand{:href => home_url + "/comparisons/56603bcbe7ffc52d02000000"}
          = t('app-title')
      .navbar-collapse.collapse.navbar-responsive-collapse
        %ul.nav.navbar-nav
          %li
            %a{"data-placement" => "bottom", "data-toggle" => "tooltip", :href => home_url, :title => t('topics-info')}
              %i.fa.fa-user-md
              =t :"Topics"
          %li{ :class => "active"}= link_to fa_icon('exclamation-circle', 'About'), about_url
        %ul.nav.navbar-nav.navbar-right
          %li
            %a{:href => help_url}
              %i.fa.fa-question-circle
              = t :"Help"
          %li.dropdown
            %a.dropdown-toggle{"aria-expanded" => "false", "data-toggle" => "dropdown", :href => "#", :role => "button"}
              = fa_icon('flag', current_language)
              %span.caret
            %ul.dropdown-menu{:role => "menu"}
              %li= link_to 'Deutsch', params.merge({ locale: :de })
              %li= link_to 'Francais', params.merge({ locale: :fr })

.container
  .row
    .col-md-12
      .panel.panel-default
        .panel-heading
          %h3 About.
        .panel-body
          =raw t('welcome-title') + t('welcome-text')
  .row
    .col-lg-12
      %br/
      %br/
      %p.pull-right
        © 2015
        %a{:href => 'http://www.qualitaetsmedizin.ch'} Qualitätsmedizin.ch
        | created by
        %a{:href => 'http://www.eonum.ch'} eonum
