= form_for [:admin, @hospital_location] do |f|
  - if @hospital_location.errors.any?
    #error_explanation
      %h2= "#{pluralize(@hospital_location.errors.count, "error")} prohibited this admin_hospital_location from being saved:"
      %ul
        - @hospital_location.errors.full_messages.each do |msg|
          %li= msg
  %table.table
    %tr
      %td= f.label :doc_id
      %td= f.number_field :doc_id
    %tr
      %td= f.label :name
      %td= f.text_field :name
    %tr
      %td= f.label :title
      %td= f.text_field :title
    %tr
      %td= f.label :address
      %td= f.text_field :address
    %tr
      %td= f.label :email
      %td= f.text_field :email
    %tr
      %td= f.label :phone1
      %td= f.text_field :phone1
    %tr
      %td= f.label :phone2
      %td= f.text_field :phone2
    %tr
      %td= f.label :canton
      %td= f.text_field :canton

    %tr
      %td= f.label 'Spitalverbund'
      %td= f.select :hospital, options_for_select(Hospital.all.order_by(:name.asc).map { |h| [h.name, h.id]}, @hospital_location.hospital == nil ? nil : @hospital_location.hospital.id)


  .actions
    = f.submit 'Speichern'
