%h2= @hospital.name
%p
  %b =t('street_no')+":"
  = @hospital.address1
%p
  %b =t('postcode_city')+":"
  = @hospital.address2
%p
  %b =t('bfs_typology')+":"
  = @hospital.bfs_typo
%p
  %b =t('canton')+":"
  = @hospital.canton

%p
  %b= t('map_coord')
  = @hospital.location
  = link_to t('locate_new'), geolocate_admin_hospital_path(@hospital), method: :post
  = render :partial => 'shared/map'

= link_to t('edit'), edit_admin_hospital_path(@hospital)
\|
= link_to t('back'), admin_hospitals_path

%h3 Standorte
- @hospital.hospital_locations.each do |location|
  %p
    = link_to(location.name + ' - ' + location.title + ' - ' + location.address, [:admin, location])

- if @hospital.hospital_locations.empty?
  %p Noch keine Standort verkn√ºpft mit diesem Spital.
  = link_to t('create_new_loc'), create_location_admin_hospital_path(@hospital), method: :post

%h3= link_to t('show_all_fields'), admin_hospital_fields_path(@hospital)


