%h2= @hospital.name

%table.table
  %thead
    %tr
      %th Name
      - @years.each do |year, value|
        %th= year

  %tbody
    - @variables.each do |var|
      %tr
        %td= var.localized_field 'name', locale
        - @years.each do |year, value|
          %td= @hospital[var.field_name] == nil ? 'NA' : @hospital[var.field_name][year]
        %td= link_to 'Show', admin_hospital_field_path(@hospital, var.field_name)
        %td= link_to 'Edit', edit_admin_hospital_field_path(@hospital, var.field_name)
        %td= link_to 'Destroy', admin_hospital_field_path(@hospital, var.field_name), :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'Neues Feld', new_admin_hospital_field_path
